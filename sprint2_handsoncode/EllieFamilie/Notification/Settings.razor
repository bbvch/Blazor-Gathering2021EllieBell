@page "/config"
@inject Blazored.LocalStorage.ILocalStorageService localStore

<h3>Einstellungen</h3>

<EditForm Model="UserInfo">
<div class="row">
	<div class="col-1 px-3 py-1 fw-bold">
		<label>Id</label>
	</div>
	<div class="col-10 px-3">
		<InputNumber class="form-control" @bind-Value="UserInfo.Id" d />
	</div>
</div>
<div class="row">
	<div class="col-1 px-3 py-1 fw-bold">
		<label>Name</label>
	</div>
	<div class="col-10 px-3">
		<InputText class="form-control" @bind-Value="UserInfo.Name" />
	</div>
</div>
</EditForm>

<div class="col py-3">
	<button class="btn btn-success" @onclick="UpdateLocalStorage">Save</button>
	<button class="btn btn-danger" @onclick="ClearLocalStorage">Clear</button>
</div>
